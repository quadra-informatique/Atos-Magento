<config>
    <modules>
        <Quadra_Atos>
            <version>2.1.2</version>
        </Quadra_Atos>
    </modules>
    <global>
        <models>
            <atos>
                <class>Quadra_Atos_Model</class>
                <resourceModel>atos_mysql4</resourceModel>
            </atos>
            <atos_mysql4>
                <class>Quadra_Atos_Model_Mysql4</class>
                <entities>
                    <log_request>
                        <table>atos_log_request</table>
                    </log_request>
                    <log_response>
                        <table>atos_log_response</table>
                    </log_response>
                </entities>
            </atos_mysql4>
        </models>
        <blocks>
            <atos>
                <class>Quadra_Atos_Block</class>
            </atos>
        </blocks>
        <helpers>
            <atos>
                <class>Quadra_Atos_Helper</class>
            </atos>
        </helpers>
        <resources>
            <atos_setup>
                <setup>
                    <module>Quadra_Atos</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </atos_setup>
            <atos_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </atos_write>
            <atos_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </atos_read>
        </resources>
        <payment>
            <atos_standard>
                <!-- Liste des langages supportées -->
                <languages>
                    <fr>
                        <code>fr</code>
                        <name>Français</name>
                    </fr>
