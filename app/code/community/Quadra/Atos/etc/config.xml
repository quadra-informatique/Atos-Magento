                        <name>Allemand</name>
                    </ge>
                    <it>
                        <code>it</code>
                        <name>Italien</name>
                    </it>
                </languages>
                <!-- Liste des cartes de crédit supportées -->
                <credit_card>
                    <CB>
                        <code>CB</code>
                        <name>Carte Bleue</name>
                    </CB>
                    <MASTERCARD>
