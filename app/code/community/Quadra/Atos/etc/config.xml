<config>
    <modules>
        <Quadra_Atos>
            <version>3.0.0</version>
        </Quadra_Atos>
    </modules>
    <global>
        <models>
            <atos>
                <class>Quadra_Atos_Model</class>
            </atos>
        </models>
        <helpers>
            <atos>
                <class>Quadra_Atos_Helper</class>
            </atos>
        </helpers>
        <resources>
            <atos_setup>
                <setup>
                    <module>Quadra_Atos</module>
                </setup>
            </atos_setup>
        </resources>
        <blocks>
            <atos>
                <class>Quadra_Atos_Block</class>
            </atos>
        </blocks>
        <payment>
            <atos>
                <!-- Liste des pays supportées -->
                <merchant_country>
                    <be>
                        <code>be</code>
                        <name>Belgique</name>
                    </be>
                    <fr>
                        <code>fr</code>
                        <name>France</name>
                    </fr>
                    <de>
                        <code>de</code>
                        <name>Allemagne</name>
                    </de>
                    <it>
                        <code>it</code>
                        <name>Italie</name>
                    </it>
                    <es>
                        <code>es</code>
                        <name>Espagne</name>
                    </es>
                    <en>
                        <code>en</code>
                        <name>Royaume-Uni</name>
                    </en>
                </merchant_country>
                <!-- Liste des langages supportées -->
                <languages>
                    <fr>
                        <code>fr</code>
                        <name>Français</name>
                    </fr>
                    <en>
                        <code>en</code>
                        <name>Anglais</name>
