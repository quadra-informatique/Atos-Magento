        </payment>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <atos before="Mage_Adminhtml">Quadra_Atos_Adminhtml</atos>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <atos_api translate="title" module="atos">
                                            <title>Atos/Sips API Section</title>
                                        </atos_api>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <translate>
            <modules>
                <Quadra_Atos>
                    <files>
                        <default>Quadra_Atos.csv</default>
                    </files>
                </Quadra_Atos>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <secure_url>
            <atos_payment>/atos/payment</atos_payment>
        </secure_url>
        <layout>
            <updates>
                <atos>
                    <file>atos.xml</file>
                </atos>
            </updates>
        </layout>
        <routers>
            <atos>
                <use>standard</use>
                <args>
                    <module>Quadra_Atos</module>
                    <frontName>atos</frontName>
                </args>
            </atos>
        </routers>
        <translate>
            <modules>
                <Quadra_Atos>
                    <files>
                        <default>Quadra_Atos.csv</default>
                    </files>
                </Quadra_Atos>
            </modules>
        </translate>
    </frontend>
    <default>
        <atos_api>
            <config_standard>
                <check_ip_address>0</check_ip_address>
            </config_standard>
            <config_several>
                <check_ip_address>0</check_ip_address>
            </config_several>
            <config_aurore>
                <check_ip_address>0</check_ip_address>
            </config_aurore>
            <config_euro>
                <check_ip_address>0</check_ip_address>
            </config_euro>
        </atos_api>
        <payment>
            <atos_standard>
                <active>0</active>
                <model>atos/method_standard</model>
                <title><![CDATA[Credit Card]]></title>
                <payment_action><![CDATA[authorize_capture]]></payment_action>
                <allowspecific>0</allowspecific>
            </atos_standard>
            <atos_several>
                <active>0</active>
                <model>atos/method_several</model>
                <title><![CDATA[Payment in several times]]></title>
                <payment_action><![CDATA[authorize]]></payment_action>
                <allowspecific>0</allowspecific>
                <nb_payment>2</nb_payment>
            </atos_several>
            <atos_aurore>
                <active>0</active>
                <model>atos/method_aurore</model>
                <title><![CDATA[Aurore Card]]></title>
                <payment_action><![CDATA[authorize]]></payment_action>
                <allowspecific>0</allowspecific>
            </atos_aurore>
            <atos_euro>
                <active>0</active>
                <model>atos/method_euro</model>
                <title><![CDATA[1EUROCOM]]></title>
                <payment_action><![CDATA[authorize_capture]]></payment_action>
                <allowspecific>0</allowspecific>
            </atos_euro>
        </payment>
    </default>
</config>
